@using Mooshak2.Controllers
@model IEnumerable<Mooshak2.Models.Entities.Course>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create","Course")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit","Course", new { id=item.CourseID },null) |
            @Html.ActionLink("Details", "Detail", "Course", new { id=item.CourseID },null) |
            @Html.ActionLink("Delete", "Delete", "Course", new { id = item.CourseID }, null))
        </td>
    </tr>
}
</table>
