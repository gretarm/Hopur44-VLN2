@model Mooshak2.Models.ViewModels.StudentViewModel
    @using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Home";
}

<h2>Welcome back, @User.Identity.GetUserName()</h2>

<div class="mainContent body-content col-md-¨4">
    
    @foreach (var item in Model.Courses)
    {       
         <div class="col-md-6">
             <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
             <p>
                 @Html.DisplayFor(modelItem => item.Details)
             </p>

             @Html.ActionLink("Go to course \u00BB", "../Course/ID", new { id = item.CourseID }, new { @class = "btn btn-default" })
        </div>
    }
</div>
